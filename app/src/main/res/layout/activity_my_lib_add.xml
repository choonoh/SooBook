<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/sooBook_bg">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="isbn"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/isbn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="책 isbn 입력하세여"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <ImageButton
                    android:id="@+id/isbn_sc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/seach"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="책제목"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/book_title_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="책제목"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="작가"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/book_author_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="저자"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="출판사"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/book_pub_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="출판사"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_name"
                android:layout_alignLeft="@+id/text_name"
                android:layout_marginTop="20dp"
                android:text="별점 "
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edit_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_age"
                android:layout_alignRight="@+id/check_bad"
                android:layout_alignBottom="@+id/text_age"
                android:layout_toRightOf="@+id/text_age"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="10" />

            <TextView
                android:id="@+id/text_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_age"
                android:layout_alignLeft="@+id/text_age"
                android:layout_marginTop="20dp"
                android:text="추천: "
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/check_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text_rec"
                android:layout_alignBottom="@+id/text_rec"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_rec"
                android:text="왕추천"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/check_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text_rec"
                android:layout_alignBottom="@+id/text_rec"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/check_good"
                android:text="그닥.."
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sooBook_bg"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_insert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_rec"
                    android:layout_alignRight="@+id/check_bad"
                    android:layout_marginRight="12dp"
                    android:backgroundTint="@color/sooBook_bg"
                    android:text="서재추가"
                    android:textColor="@color/black" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="368dp"
                android:layout_height="200dp"
                android:layout_below="@+id/line2"
                android:layout_marginTop="5dp"
                android:fillViewport="true"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <ListView
                    android:id="@+id/db_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>

            </ScrollView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>