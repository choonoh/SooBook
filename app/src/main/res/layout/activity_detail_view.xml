<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sooBook_bg">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="30dp"
        android:text="정약용도서관"
        android:textSize="30sp"
        android:textColor="#00B400"
        android:textStyle="bold"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기본 정보"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textColor="@color/soobook_green" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="15dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경기도 남양주시 다산중앙로 82번안길 "
        android:textSize="18sp"
        android:textColor="@color/soobook_black"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:background="@drawable/tel"/>
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0315215451"
        android:textSize="18sp"
        android:textColor="#1966FF"
        android:layout_gravity="center"
        android:clickable="true"/>
    </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:background="@drawable/link"/>
        <TextView
            android:id="@+id/homePageUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.naver.com"
            android:textSize="18sp"
            android:textColor="#1966FF"
            android:layout_gravity="center"
            android:clickable="true"/>
        </LinearLayout>
            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공공도서관"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운영정보"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textColor="@color/soobook_green" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="15dp"
        android:background="?android:attr/listDivider" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴무일"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/light_grey" />

        <TextView
            android:id="@+id/closeDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매월 무슨요일df"
            android:textSize="18sp"
            android:textColor="@color/soobook_black"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 평 일"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/light_grey"/>

            <TextView
                android:id="@+id/weekOpenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:textSize="18sp"
                android:textColor="@color/soobook_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:textSize="18sp"
                android:textColor="@color/soobook_black" />
            <TextView
                android:id="@+id/weekCloseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22:00"
                android:textSize="18sp"
                android:textColor="@color/soobook_black"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="토요일"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:textColor="#5B92FF"/>

            <TextView
                android:id="@+id/satOpenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:textSize="18sp"
                android:textColor="@color/soobook_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:textSize="18sp"
                android:textColor="@color/soobook_black" />

            <TextView
                android:id="@+id/satCloseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22:00"
                android:textSize="18sp"
                android:textColor="@color/soobook_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공휴일"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:textColor="#FF5B5B" />


            <TextView
                android:id="@+id/holidayOpenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0800"
                android:textSize="18sp"
                android:textColor="@color/soobook_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:textSize="18sp"
                android:textColor="@color/soobook_black"  />

            <TextView
                android:id="@+id/holidayCloseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2180"
                android:textSize="18sp"
                android:textColor="@color/soobook_black" />
        </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대여정보"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"
        android:textColor="@color/soobook_green"  />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="15dp"
        android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="책 num"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="6" />

            <TextView
                android:id="@+id/bookNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200000"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최대 권수"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/light_grey"/>

            <TextView
                android:id="@+id/borPosNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="18sp"
                android:textColor="@color/soobook_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="권"
                android:textSize="18sp"
                android:textColor="@color/soobook_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대여 기간"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:textColor="@color/light_grey" />
            <TextView
                android:id="@+id/borPosDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:textSize="18sp"
                android:textColor="@color/soobook_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:textSize="18sp"
                android:textColor="@color/soobook_black" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="갱신 날짜"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="7" />

            <TextView
                android:id="@+id/dataTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="3" />
        </LinearLayout>
    </LinearLayout>
