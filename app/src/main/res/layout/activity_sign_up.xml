<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sooBook_bg"
    tools:context=".Login">

    <ImageView
        android:id="@+id/soo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/soo" />

    <ImageView
        android:id="@+id/book"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/boogie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/soo"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입 할구야??"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_weight="8"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="아이디 쳐!!!"
                android:textColorHint="#888888"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_weight="4"/>

            <Button
                android:id="@+id/only_one_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="중복확인"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_weight="6"/>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호 쳐!!!"
                android:textColorHint="#888888"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_weight="3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_weight="6"/>

            <EditText
                android:id="@+id/et_pwd_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호 한번 더 쳐!!!"
                android:textColorHint="#888888"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_weight="3"/>
        </LinearLayout>


            <Button
                android:id="@+id/sign_up_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="회원가입!!"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>